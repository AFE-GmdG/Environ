{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:wpf-example-app",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/WpfExampleApp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish:wpf-example-app",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "-c",
        "Release",
        "${workspaceFolder}/WpfExampleApp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
